{
  "name": "hugla",
  "version": "0.1.2",
  "description": "hugla web framework's node back-end",
  "keywords": [
    "web",
    "framework",
    "hugla"
  ],
  "homepage": "https://hugla.noosxe.com/",
  "license": "MIT",
  "repository": "hugla/hugla-node",
  "author": "noosxe <noosx.e@gmail.com> (https://noosxe.com/)",
  "bin": {
    "hugla": "./bin/hugla.js"
  },
  "main": "./lib/hugla.js",
  "dependencies": {
    "hugla-config": "0.1.x",
    "hugla-logger": "0.1.x",
    "lodash": "3.10.1",
    "shortid": "2.2.2",
    "async": "1.4.2",
    "commander": "2.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "6.24.x",
    "babel-preset-es2016": "6.24.x"
  },
  "scripts": {
    "compile": "babel --presets es2015,es2016 -d lib/ src/",
    "prepublish": "npm run compile",
    "lint": "jshint index.js lib/**.js",
    "test": "HUGLA_NO_EXIT=1 HUGLA_SILENT=1 mocha --compilers js:babel-core/register --reporter spec --bail",
    "test-ci": "HUGLA_NO_EXIT=1 HUGLA_SILENT=1 istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec --compilers js:babel-core/register"
  }
}
